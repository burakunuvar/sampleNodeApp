<%- include('../partials/header') -%>


<div class="container">
  <div class="jumbotron jumbotron-fluid text-white-50 " id="backgroundpicture">
    <div class="container p-5">
      <h3 class="display-4">Add your favourite site </h3>
      <form action="/movies" method="POST">
        <div class="form-group">
          <input type="text" class="form-control-sm" name="title" placeholder="name of the movie">
        </div>
        <div class="form-group">
          <input type="text" class="form-control-sm" name="image" placeholder="image url">
        </div>
        <div class="form-group">
          <input type="text" class="form-control-md" name="description" placeholder="description">
        </div>
        <button type="submit" class="btn btn-dark btn-sm ">Add your favourite</button>
      </form>
    </div>
  </div>
</div>

<div class="row justify-content-end">
  <div class="col 4 p-5">
    <a class="btn btn-dark btn-sm " href="/movies" role="button"> back to movies </a>
  </div>

</div>



<%- include('../partials/footer'); -%>
