<%- include('../partials/header') -%>

<div class="container">
  <div class="jumbotron jumbotron-fluid text-white-50 " id="backgroundpicture">
    <div class="container p-5">
      <h3 class="display-4">Add New Comment to <br> <em>"<%= whichMovietoComment.title %>" <%= whichMovietoComment._id %> </em> </h3>
      <form action="/movies/<%= whichMovietoComment._id %>/comments" method="POST">
        <div class="form-group">
          <input type="text" class="form-control-sm" name="comment[text]" placeholder="add your comment here">
        </div>
        <!-- <div class="form-group">
          <input type="text" class="form-control-sm" name="comment[author]" placeholder="author of the comment">
        </div> -->
        <button type="submit" class="btn btn-dark btn-sm ">Add your Comment</button>
      </form>
    </div>
  </div>
</div>

<div class="row justify-content-end">
  <div class="col 4 p-5">
    <a class="btn btn-dark btn-sm " href="/movies" role="button"> back to movies </a>
  </div>

</div>


